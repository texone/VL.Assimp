<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>VL.Assimp</id>
    <version>0.0.5-alpha</version>
    <authors>Christian Riekoff</authors>
    <owners>Christian Riekoff</owners>

    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">LGPL-3.0-only</license>
    <projectUrl>https://github.com/texone/VL.Assimp</projectUrl>
    <description>Provides Assimp model loading in VL (vvvv gamma).</description>
    <tags>VL assimp importer</tags>

    <!-- ✅ Dependency: will make AssimpNet auto-install -->
    <dependencies>
      <dependency id="AssimpNet" version="[5.0.0-beta1]" />
    </dependencies>

    <!-- optional icon -->
    <icon>icon/nugeticon.png</icon>
  </metadata>

  <files>
    <!-- ✅ Icon -->
    <file src="nugeticon.png" target="icon/" />

    <!-- ✅ VL file(s) at root -->
    <!-- Use relative paths without `..` if you call nuget.exe from the package folder -->
    <file src="VL.Assimp.vl" target="" />

    <!-- ✅ include the compiled DLLs -->
    <file src="bin\Release\net8.0\*.dll" target="lib/net8.0" />

    <!-- ✅ include optional help patches -->
    <file src="help\**" target="help/" />
  </files>
</package>
